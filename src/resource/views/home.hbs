
<div class="mt-4 p-5 bg-light">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 col-xl-3 mb-3 d-flex align-items-stretch">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cardTexts = document.querySelectorAll('.card-text');
            cardTexts.forEach(cardText => {
                const maxLines = 3;
                const lineHeight = parseInt(window.getComputedStyle(cardText).lineHeight);
                const maxHeight = lineHeight * maxLines;

                if (cardText.scrollHeight > maxHeight) {
                    let text = cardText.textContent;
                    while (cardText.scrollHeight > maxHeight) {
                        text = text.slice(0, -1);
                        cardText.textContent = text + '...';
                    }
                }
            });
        });
    </script>
</div>