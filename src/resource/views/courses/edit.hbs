<div class="mt-4"></div>
    <div class="row">
        <form method="POST" action="/courses/{{course._id}}?_method=PUT">
            <div class="col-5">
                <div class="mb-3">
                    <label for="name" class="form-label">Tên khóa học</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Mô tả</label>
                    <textarea type="text" class="form-control" id="description" name="description">{{course.description}}</textarea>
                </div>
                <div class="mb-3">
                    <label for="videoId" class="form-label">Video ID</label>
                    <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">URL hình ảnh</label>
                    <input type="text" class="form-control" id="image" name="image" value="{{course.image}}">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
            </div>
        </form>
    </div>
</div>